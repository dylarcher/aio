{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "src/types",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES2020",
    "lib": ["DOM", "ES2020"],
    "moduleResolution": "node",
    "outDir": "dist",
    "paths": {
      "*": ["src/*"]
    },
    "types": ["node_modules/@types", "src/types"],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "sourceRoot": "src",
    "strict": true,
    "target": "ES2020"
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src", "node_modules/@types"],
  "files": [
    ".markdownlint.json",
    "biome.json",
    "lightningcss.config.js",
    "playwright.config.js"
  ]
}
