# Save exact versions of installed packages
save-exact=true

# Use npm registry
registry=https://registry.npmjs.org/

# Set default log level to warn
loglevel=warn

# Always use package-lock.json
package-lock=true

# Enable strict SSL for registry requests
strict-ssl=true

# Set cache directory (optional, can be customized)
cache=${HOME}/.npm

# Prefer offline cache when possible
prefer-offline=true

# Limit number of concurrent installs
maxsockets=50

# Set default script shell (optional, for cross-platform compatibility)
script-shell=/bin/bash

# Set audit level to moderate (optional)
audit-level=moderate

# Enable color output
color=true

# Prefer deduplication for supported dependency versions
prefer-dedupe=true
